doctype 5
html
  head
    title Twitter

    link(href="/stylesheets/bootstrap.min.css", rel="stylesheet", media="screen")
    link(href="/stylesheets/bootstrap-responsive.min.css", rel="stylesheet", media="screen")
    link(href="/stylesheets/login.css", rel="stylesheet", media="screen")
    style
      body {
          padding-top: 60px;
          padding-bottom: 10px;
        }
      .sidebar-nav {
        padding: 9px 0;
      }
    block head

  body
    div.navbar.navbar-inverse.navbar-fixed-top
      div.navbar-inner
        div.container-fluid
          a.brand(href="#") Twitter
          div.nav-collapse.collapse
            p.navbar-text.pull-right: a.navbar-link(href="#") Loggin
            ul.nav
              li: a(href="#") Home
              li: a(href="#user") User
              li: a(href="#status") Status
              li: a(href="#about") About
              li: a(href="#contact") Contact
    block content

    script(src="/javascripts/jquery.min.js")
    script(src="/javascripts/bootstrap.min.js")
    script(src="/javascripts/json2.js")
    script(src="/javascripts/underscore.min.js")
    script(src="/javascripts/backbone.min.js")
    
    script(src="/javascripts/main.js")
    block script